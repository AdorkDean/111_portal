<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="mailSender" class="com.rc.commons.mail.Mail">
		<property name="host">
			<value>${mail.host}</value>
		</property>
		<property name="username">
			<value>${mail.username}</value>
		</property>
		<property name="showname">
			<value>${mail.showname}</value>
		</property>
		<property name="password">
			<value>${mail.password}</value>
		</property>
		<property name="charset">
			<value>${mail.CharSet}</value>
		</property>
		<property name="fromaddress">
			<value>${mail.fromaddress}</value>
		</property>
		<property name="templatepath">
			<value>${mail.templatePath}</value>
		</property>
	</bean>

</beans> 